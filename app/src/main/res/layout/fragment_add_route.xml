<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.trafficpal.AddRouteFragment">

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/editText_source"
        android:hint="@string/source_address"
        android:layout_gravity="right"

        android:layout_margin="@dimen/abc_button_padding_horizontal_material"
        android:paddingTop="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:paddingBottom="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:singleLine="true" />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/editText_dest"
        android:hint="@string/dest_address"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/abc_button_padding_horizontal_material"
        android:paddingTop="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:paddingBottom="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:autoText="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to_nots"
        android:elevation="6dp"
        android:translationZ="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:paddingBottom="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:id="@+id/button_nots_to"
        android:layout_margin="@dimen/abc_button_padding_horizontal_material" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back_nots"
        android:elevation="6dp"
        android:translationZ="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:paddingBottom="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:id="@+id/button_nots_back"
        android:layout_margin="@dimen/abc_button_padding_horizontal_material" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/abc_action_bar_content_inset_material">

        <CheckBox
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/check_nots"
            android:layout_weight="1"
            android:paddingTop="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:paddingBottom="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:id="@+id/checkBox_notifications" />

        <CheckBox
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/check_logging"
            android:layout_weight="1"
            android:paddingTop="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:paddingBottom="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:id="@+id/checkBox_logging"
            android:visibility="visible" />
    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_path"
        android:elevation="6dp"
        android:translationZ="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:paddingBottom="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:id="@+id/button_save_path"
        android:layout_margin="@dimen/abc_button_padding_horizontal_material"
        android:background="@color/color_blue"
        android:textColor="#ffffff" />



</LinearLayout>
